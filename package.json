{
  "name": "remote-control-server",
  "productName": "PC Remote Server",
  "description": "HTTP remote control server with socket.io",
  "version": "0.1.0",
  "author": "amoshydra",
  "private": true,
  "postinstall": "install-app-deps",
  "main": "./application/main.js",
  "scripts": {
    "start": "electron ./application/main.js",
    "watch": "nodemon --exec electron application/main.js",
    "rebuild": "npm rebuild --runtime=electron --target=1.7.10 --disturl=https://atom.io/download/atom-shell --abi=51",
    "postinstall": "npm run rebuild",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.amoshydra.electron.remote-control-server",
    "nsis": {
      "differentialPackage": false
    }
  },
  "dependencies": {
    "copy-paste": "^1.3.0",
    "debug": "~3.1.0",
    "express": "~4.16.2",
    "hbs": "~4.0.1",
    "lodash": "^4.17.4",
    "morgan": "~1.9.0",
    "robotjs": "git://github.com/octalmage/robotjs#master",
    "serve-favicon": "~2.4.5",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "electron": "1.7.10",
    "electron-builder": "^19.49.2",
    "nodemon": "^1.14.3"
  },
  "optionalDependencies": {
    "7zip-bin-win": "^2.1.1"
  }
}
